<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Netgen\RemoteMedia\API\Values\RemoteResource" table="ngrm_remote_resource">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="remoteId" column="remote_id" type="string" length="255" nullable="false" unique="true" />
        <field name="type" column="type" type="string" length="100" nullable="false" />
        <field name="url" column="url" type="string" length="255" nullable="false" />
        <field name="name" column="name" type="string" length="255" nullable="false" />
        <field name="md5" column="md5" type="string" length="64" nullable="false" />
        <field name="version" column="version" type="string" length="100" nullable="true" />
        <field name="folder" column="folder" type="object" nullable="true" />
        <field name="visibility" column="visibility" type="string" length="100" nullable="false" />
        <field name="size" column="size" type="integer" nullable="false" />
        <field name="altText" column="alt_text" type="text" length="1000" nullable="true" />
        <field name="caption" column="caption" type="text" length="1000" nullable="true" />
        <field name="tags" column="tags" type="array" nullable="true" />
        <field name="metadata" column="metadata" type="array" nullable="true" />
        <field name="context" column="context" type="array" nullable="true" />

        <field name="createdAt" column="created_at" type="datetime_immutable" />
        <field name="updatedAt" column="updated_at" type="datetime_immutable" />

        <one-to-many field="locations" target-entity="Netgen\RemoteMedia\API\Values\RemoteResourceLocation" mapped-by="remoteResource" />

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="updateTimestamps"/>
            <lifecycle-callback type="preUpdate" method="updateTimestamps"/>
        </lifecycle-callbacks>

    </entity>

</doctrine-mapping>
